{
    "manifest_version": 2,
  
    "name": "ColorPicker",
    "description": "Deze extensie past de font kleur aan op een website",
    "version": "1.0",
    "icons": {
      "128": "icon128.png",
      "48": "icon48.png",
      "16": "icon16.png"
    },
  
    "page_action": {
      "default_icon": "icon16.png",
      "default_popup": "popup.html",
      "default_title": "ColorPicker"
    },
  
    "background": {
      "scripts": ["eventPage.js"],
      "persistent": false
    },
  
    "content_scripts":[
      {
        "matches": ["https://developer.chrome.com/*"],
        "js": ["content.js", "jquery-3.6.0.min.js"],
        "css": ["content.css"]
      }
    ],
  
    "permissions": [
      "tabs",
      "https://developer.chrome.com/*"
          ],

    "content_security_policy": "script-src 'self' https://example.com; object-src 'self'"
  }